
# Terminal (floating)
super + Return
  kitty 

# Terminal (floating)
super + shift + Return
  kitty --class 'kitty-float'	

# Terminal (alacritty)
ctrl + alt + t
   alacritty 


# Rofi App Launcher
super + d
	$HOME/.config/bspwm/scripts/rofi_launcher

# Rofi Run
alt + F2
	$HOME/.config/bspwm/scripts/rofi_runner

# Rofi Menus/Applets
super + {b,n,r,s,w,x}
	{$HOME/.config/bspwm/scripts/rofi_bluetooth,nmd,$HOME/.config/bspwm/scripts/rofi_asroot,$HOME/.config/bspwm/scripts/rofi_screenshot,$HOME/.config/bspwm/scripts/rofi_windows,$HOME/.config/bspwm/scripts/rofi_powermenu}

# Launch Apps
super + shift + {f,w}
	{thunar,firefox}

# Nvim
super + shift + e
  alacritty --class 'code-oss' -e nvim

# Terminal Apps
ctrl + alt + {v,r,h,a}
	alacritty -e {vim,ranger,htop,pulsemixer}

# Color Picker
super + p
	$HOME/.config/bspwm/scripts/bspcolorpicker

##---------- Bspwm ----------##

# Hide/Unhide Window
#super + shift + p
	$HOME/.config/bspwm/scripts/bspwinmask

# Close App
super + {_,shift + }q
	bspc node -{c,k}

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch workspace or Send focused Node to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'

# Send focused Node to workspace directionally
super + ctrl + shift + {h,l}
	bspc node -d {prev,next} '--follow'

# Change focus of the Node or Swap Nodes
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Move floating windows
super + alt + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Expanding windows
super + control + {h,j,k,l}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# Split horizontal, vertical or cancel
super + {o,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Toggle Layout (Tiled/Monocle)
super + ;
	bspc desktop -l next

# Toggle Fullscreen
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Rotate the focused node 90 degrees clockwise
super + e
  bspc node @parent -R 90

